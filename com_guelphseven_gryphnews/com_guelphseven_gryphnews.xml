<zimlet name="com_guelphseven_gryphnews" version="0.2" description="displays rss from uoguelph.ca">
  <include>gryphnews.js</include>
  <includeCSS>gryphnews.css</includeCSS>
  <handlerObject>com_guelphseven_gryphnews</handlerObject>
  <zimletPanelItem label="Gryph News" icon="gryphnews-panelIcon">
    <toolTipText>Displays the latest University of Guelph News!</toolTipText>
    <contextMenu>
        <menuItem label="Gryph News Preferences" id="gryphrss_preferences" />
    </contextMenu>
  </zimletPanelItem>
  <userProperties>
      <property type="string" name="gryphrss_showFeedsInMiniCal" value="false"/>
  </userProperties>
</zimlet>
